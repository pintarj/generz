    "generation"
  ],
  "author": "Janez Pintar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pintarj/generz/issues"
  },
  "homepage": "https://github.com/pintarj/generz#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.4",
    "jest": "^24.5.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "yargs": "^13.2.2"
  }
}
