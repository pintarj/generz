{
  "name": "generz",
  "version": "0.5.0",
  "description": "CLI program that generates code parts for compilers",
  "engines": {
    "node": "16"
  },
  "main": "dist/main.js",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "generz": "dist/main.js"
  },
  "scripts": {
    "clean:dist": "rm -rf dist/",
    "build": "tsc",
    "prepare": "npm run clean:dist && npm test",
    "prestart": "npm run build",
    "pretest": "npm run build",
    "postversion": "git push && git push --tags",
    "start": "node --enable-source-maps dist/main.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pintarj/generz.git"
  },
  "keywords": [
    "compilers",
    "code",
    "generation",
    "codegen"
  ],
  "author": "Janez Pintar <pintarj.zero@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pintarj/generz/issues"
  },
  "homepage": "https://github.com/pintarj/generz#readme",
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.22",
    "dedent": "^0.7.0",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "yargs": "^17.3.1"
  }
}
