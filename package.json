{
  "name": "generz",
  "version": "0.1.1",
  "description": "CLI program that generates code parts for compilers",
  "main": "dist/main.js",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "generz": "dist/main.js"
  },
  "scripts": {
    "clean:dist": "rm -rf dist/",
    "build": "npm run clean:dist && tsc",
    "prepare": "npm test",
    "prestart": "npm run build",
    "pretest": "npm run build",
    "postversion": "git push && git push --tags",
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pintarj/generz.git"
  },
  "keywords": [
    "compilers",
    "code",
    "generation",
    "codegen"
  ],
  "author": "Janez Pintar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pintarj/generz/issues"
  },
  "homepage": "https://github.com/pintarj/generz#readme",
  "devDependencies": {
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^25.2.3",
    "@types/node": "^11.15.14",
    "jest": "^25.5.4",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "fs-extra": "^7.0.1",
    "yargs": "^13.3.2"
  }
}
