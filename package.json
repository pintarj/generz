{
  "name": "generz",
  "version": "0.2.0",
  "description": "CLI program that generates code parts for compilers",
  "main": "dist/main.js",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "generz": "dist/main.js"
  },
  "scripts": {
    "clean:dist": "rm -rf dist/",
    "build": "npm run clean:dist && tsc",
    "prepare": "npm test",
    "prestart": "npm run build",
    "pretest": "npm run build",
    "postversion": "git push && git push --tags",
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pintarj/generz.git"
  },
  "keywords": [
    "compilers",
    "code",
    "generation",
    "codegen"
  ],
  "author": "Janez Pintar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pintarj/generz/issues"
  },
  "homepage": "https://github.com/pintarj/generz#readme",
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "dedent": "^0.7.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.1.0",
    "yargs": "^16.2.0"
  }
}
