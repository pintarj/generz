{
  "name": "generz",
  "version": "0.1.0",
  "description": "CLI program that generates code parts for compilers",
  "main": "lib/main.js",
  "files": [
    "lib/**/*"
  ],
  "bin": {
    "generz": "lib/main.js"
  },
  "scripts": {
