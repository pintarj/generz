{
  "name": "generz",
  "version": "0.8.2",
  "description": "CLI program that generates code parts for compilers",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "main": "dist/main.js",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "generz": "dist/main.js"
  },
  "scripts": {
    "clean:dist": "rimraf dist/",
    "build": "tsc",
    "prepack": "npm run clean:dist && npm run build",
    "prestart": "npm run build",
    "pretest": "npm run build",
    "postversion": "git push && git push --tags",
    "start": "node --enable-source-maps dist/main.js",
    "test": "node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pintarj/generz.git"
  },
  "keywords": [
    "compilers",
    "code",
    "generation",
    "codegen"
  ],
  "author": "Janez Pintar <pintarj.zero@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pintarj/generz/issues"
  },
  "homepage": "https://github.com/pintarj/generz#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.17.1",
    "dedent": "^1.6.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "yargs": "^18.0.0"
  }
}
